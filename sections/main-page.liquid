{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      /* padding-top:20px !important;
      padding-bottom:20px  !important; */
    }

  }
{%- endstyle -%}

{% if page.url == '/pages/freestyle-apparel' or page.url == '/pages/freestyle-headwear' %}
<style>
  .page-width,
  .page-width--narrow {
    max-width: 85% !important;
    margin: auto !important;
  }

  .page-title {
    margin: 0 !important;
    display:flex !important;
    justify-content:center !important;
  }
</style>
{% endif %}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    {{ page.title | escape }}
  </h1>

  <h1 class="main-page-title page-title">
    {%- if section.settings.custom_title -%}
      {{ section.settings.custom_content | escape }}
    {%- else -%}
      {{ page.title | t }}
    {%- endif -%}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
    {{ page.content }}
  </div>
  {%- for block in section.blocks -%}
    {%- if block.type == 'title' -%}
      <div class="block-title">
        <h2>{{ block.settings.custom_title | escape }}</h2>
        {%- if block.settings.blog_show_date -%}
          <p>{{ "now" | date: "%B %d, %Y" }}</p>
        {%- endif -%}
        {%- if block.settings.blog_show_author -%}
          <p>by Author</p>
        {%- endif -%}
      </div>
    {%- elsif block.type == 'custom-liquid' -%}
      <div class="block-custom-liquid" style="padding-top: {{ block.settings.padding_top }}px; padding-bottom: {{ block.settings.padding_bottom }}px;">
        {{ block.settings.custom_liquid }}
      </div>
    {%- endif -%}
  {%- endfor -%}
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "text",
      "id": "custom_title",
      "label": "Custom Title",
      "default": "Custom Page Title"
    }
  ],
  "blocks": [
    {
      "type": "title",
      "name": "Title",
      "settings": [
        {
          "type": "checkbox",
          "id": "blog_show_date",
          "label": "Show Date",
          "default": false
        },
        {
          "type": "checkbox",
          "id": "blog_show_author",
          "label": "Show Author",
          "default": false
        },
        {
          "type": "range",
          "id": "padding_top",
          "label": "Padding Top",
          "default": 28,
          "min": 0,
          "max": 100
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "label": "Padding Bottom",
          "default": 28,
          "min": 0,
          "max": 100
        },
        {
          "type": "text",
          "id": "custom_title",
          "label": "Custom Title",
          "default": "Custom Page Title"
        }
      ]
    },
    {
      "type": "custom-liquid",
      "name": "Custom Liquid",
      "settings": [
        {
          "type": "liquid",
          "id": "custom_liquid",
          "label": "Custom Liquid",
          "default": "<div></div>"
        },
        {
          "type": "range",
          "id": "padding_top",
          "label": "Padding Top",
          "default": 0,
          "min": 0,
          "max": 100
        },
        {
          "type": "range",
          "id": "padding_bottom",
          "label": "Padding Bottom",
          "default": 0,
          "min": 0,
          "max": 100
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Pages"
    }
  ]
}
{% endschema %}